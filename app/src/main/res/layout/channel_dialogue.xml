<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use POMSA App as ...."
        android:textSize="18dp"
        android:textColor="#212121"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="Channel Name"
        android:inputType="text"
        android:id="@+id/input_channel_name"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:textColor="#212121"/>

    <EditText
        android:id="@+id/input_channel_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bg"
        android:hint="Description"
        android:inputType="textImeMultiLine"
        android:maxLines="5"
        android:padding="10dp"
        android:textColor="#212121" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Creating new Channel,Accept our terms and conditions"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_create_channel"
            android:text="Create Channel"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="end"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"/>


    </LinearLayout>

</RelativeLayout>